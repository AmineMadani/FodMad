<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fodmad.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.fodmad.newsapp.FavoriteActivity"></activity>
        <activity android:name="com.fodmad.newsapp.RegisterActivity" />
        <activity android:name="com.fodmad.newsapp.LoginActivity" />
        <activity android:name="com.fodmad.newsapp.NewsByCategory" />
        <activity android:name="com.fodmad.newsapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fodmad.newsapp.models.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fodmad.newsapp.NewsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>